---
import { Image } from "astro:assets";
const posts = await fetch(`https://dummyapi.io/data/v1/post`, {
  headers: {
    "app-id": "664f1c82524560522cb8c534",
  },
}).then((res) => res.json());
---

<section class="neutral-content bg-neutral-content text-center py-5">
  <h1 class="text-2xl font-semibold ltim text-black">Trending Posts</h1>
  <div class="flex flex-wrap justify-center mt-10 w-full gap-8 px-5">
    {
      posts?.data?.map((item: any) => (
        <a href={`blogs/${item.id}`}>
          <div class="card w-96 h-72 relative shadow-lg">
            <Image
              src={item.image}
              alt="blog post image"
              width={384}
              height={288}
              class="max-w-full max-h-full object-cover rounded-lg"
            />
            <div class="absolute bg-gray-700 bg-opacity-50 w-1/2 h-full flex justify-center items-center text-white font-medium rounded-xl">
              <h1 class="text-lg">{item.text}</h1>
            </div>
          </div>
        </a>
      ))
    }
  </div>
</section>
